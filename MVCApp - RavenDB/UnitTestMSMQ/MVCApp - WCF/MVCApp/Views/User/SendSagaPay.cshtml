@model IEnumerable<MVCApp.Models.PayModel>
@{
    ViewBag.Title = "Index";
}

<h2>Send Command to Saga</h2>
<script type="text/javascript">





    $(document).ready(function () {

        var modelData = @Html.Raw(Json.Encode(Model))
        $("#grid").kendoGrid({

            pageable: true
            , sortable: true
            , silectable: true
            , selectable: true
            , columns: [
            { field: "Id", title: "Id" }
          , { title: "Action", template: '<a href="/user/sendsaga/#=Id#">SendSaga</a>' }
          , { field: "EventId", title: "Event Id" }
             ]
             , dataSource: { pageSize: 10, data: modelData }

        });
    });



</script>

<table id="grid">
</table>
